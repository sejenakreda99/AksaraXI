
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // The /users collection
    match /users/{userId} {
      // Teachers can list all users.
      allow list: if request.auth != null && request.auth.token.role == 'Guru';

      // A user can read/write their OWN document.
      // A teacher can also read/write ANY user document.
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'Guru');
    }
    
    // Chapters are public read for any authenticated user
    match /chapters/{chapterId} {
      allow read: if request.auth != null;
      // Write access should be restricted, e.g., only for admins/teachers from a secure environment
      allow write: if request.auth != null && request.auth.token.role == 'Guru';
    }

    // Submissions can only be read/written by the student who owns them, or read by a teacher
    match /submissions/{submissionId} {
        // Teachers can list all submissions for progress tracking.
        allow list: if request.auth != null && request.auth.token.role == 'Guru';
        
        // Students can read their own submissions, teachers can read any submission.
        allow get: if request.auth != null && (resource.data.studentId == request.auth.uid || request.auth.token.role == 'Guru');

        // Students can create and update their own submissions.
        allow create, update: if request.auth != null && request.resource.data.studentId == request.auth.uid;
    }
  }
}
