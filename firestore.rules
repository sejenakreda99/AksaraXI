rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Teachers can manage chapter content and section status
    match /chapters/{chapterId} {
      allow read: if request.auth != null; // All authenticated users can read chapters
      allow write: if request.auth.token.role == 'Guru'; // Only teachers can write/update chapters
    }

    // Users can only read their own user document
    // Teachers can read all user documents for management purposes
    match /users/{userId} {
      allow read: if request.auth.uid == userId || request.auth.token.role == 'Guru';
      allow list: if request.auth.token.role == 'Guru';
      allow create: if request.auth.uid == userId;
    }
    
    // Groups are managed by teachers
    match /groups/{groupId} {
        allow read, write: if request.auth.token.role == 'Guru';
        allow list: if request.auth.token.role == 'Guru';
    }

    // Students can only read/write their own submissions.
    // Teachers can read all submissions for grading.
    match /submissions/{submissionId} {
      allow read, write: if request.auth.uid == submissionId.split('_')[0];
      allow list: if request.auth.token.role == 'Guru';
    }
  }
}
